[
    {
        "$schema": "https://railway.app/railway.schema.json",
        "name": "PixelAngelo-client",
        "build": {
            "builder": "DOCKERFILE",
            "dockerfilePath": "client/Dockerfile"
        },
        "deploy": {
            "runtime": "V2",
            "numReplicas": 1,
            "sleepApplication": false,
            "multiRegionConfig": {
                "us-west2": {
                    "numReplicas": 1
                }
            },
            "restartPolicyType": "ON_FAILURE",
            "restartPolicyMaxRetries": 10
        }
    },
    {
        "$schema": "https://railway.app/railway.schema.json",
        "name": "PixelAngelo-server",
        "build": {
            "builder": "DOCKERFILE",
            "dockerfilePath": "server/Dockerfile"
        },
        "deploy": {
            "runtime": "V2",
            "numReplicas": 1,
            "sleepApplication": false,
            "multiRegionConfig": {
                "us-west2": {
                    "numReplicas": 1
                }
            },
            "restartPolicyType": "ON_FAILURE",
            "restartPolicyMaxRetries": 10
        }
    }
]